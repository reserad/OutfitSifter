<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/background" >
        
     <LinearLayout
         android:id="@+id/main_left_spacer"
         android:layout_width="0dip"
         android:layout_height="fill_parent"
         android:layout_weight="1"
         android:orientation="horizontal" >

         <ImageView
             android:id="@+id/ProfilePic"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
        	 android:scaleType="fitXY"
        	 android:padding="0px"/>
     </LinearLayout>
    
    <LinearLayout
    android:layout_width="0dip"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:layout_weight="5"
        >
        
        <LinearLayout
        android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
        >
		
            <Button
                android:id="@+id/hidden1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@layout/make_outfit_btn"
                android:enabled="false"
                android:padding="0px"
                android:scaleType="fitXY"
                android:visibility="invisible" />
            
            <Button
        android:id="@+id/btnCloset"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:scaleType="fitXY"
        android:padding="0px"
        android:background="@layout/closet" />
            
        <Button
        android:id="@+id/btnMake"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:scaleType="fitXY"
        android:padding="0px"
        android:background="@layout/make_outfit_btn" />

    <Button
        android:id="@+id/btnSuggestion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:scaleType="fitXY"
        android:padding="0px"
        android:background="@layout/suggestion_btn" />

    
    
    <Button     android:id="@+id/hidden2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@layout/make_outfit_btn"
                android:enabled="false"
                android:padding="0px"
                android:scaleType="fitXY"
                android:visibility="invisible" />

    </LinearLayout>

        
    </LinearLayout>
    
     <LinearLayout
    android:layout_width="0dip"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:layout_weight="1"
        >
       
         
     </LinearLayout>
    
    
    
    
    </LinearLayout>